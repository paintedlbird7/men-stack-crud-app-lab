<body>
  <!-- update the header -->
  <h1>Edit <%= vegetable.name %></h1>
  <form action="/vegetables/<%= vegetable._id %>?_method=PUT" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" value="<%= vegetable.name %>" />
  
      <label for="isReadyToEat">Ready to Eat?</label>
      <input type="checkbox" name="isReadyToEat" <% if (vegetable.isReadyToEat) { %>checked<% } %> >
      
      <!-- update the button text -->
      <button type="submit">Update Vegetable</button>
  </form>
  <a href="/vegetables">Back to Vegetables</a>
</body>
